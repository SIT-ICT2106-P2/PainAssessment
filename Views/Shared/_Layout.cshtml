<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PainAssessment</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/select2.min.css" />
    <style>
        li > a:hover {
            background-color: #FCC;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">

                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">PainAssessment</a>

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                @if (User.Identity.IsAuthenticated)
                {

                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            @if (User.IsInRole("Administrator"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="Admin" asp-controller="ClinicalAreas" asp-action="Index">Clinical Area</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="Admin" asp-controller="PracticeTypes" asp-action="Index">Practice Type</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="Admin" asp-controller="PainEducations" asp-action="Index">Pain Education</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="Admin" asp-controller="Practitioners" asp-action="Index">Practitioners</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="Admin" asp-controller="Patients" asp-action="Index">Patients</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="TemplateChecklist" asp-action="ViewTemplateChecklist">Template Checklist</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="CreateAccount">Create Account</a>
                                </li>
                                <li class="nav-item">
                                    @*To be updated with P2-2 Group*@
                                    <a class="nav-link text-dark" asp-area="" asp-controller="" asp-action="">Analysis</a>
                                </li>
                            }@if (User.IsInRole("Practitioner"))
                            {


                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="ModuleTwo" asp-controller="Checklists" asp-action="Index">Checklist</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="ModuleTwo" asp-controller="PractPatient" asp-action="Index">Patients</a>
                                </li>
                                <li class="nav-item">
                                    @*To be updated with P2-2 Group*@
                                    <a class="nav-link text-dark" asp-area="" asp-controller="" asp-action="">Consultations</a>
                                </li>
                                <li class="nav-item">
                                    @*To be updated with P2-2 Group*@
                                    <a class="nav-link text-dark" asp-area="" asp-controller="" asp-action="">Manage Sessions</a>
                                </li>

                            }

                        </ul>
                    </div>

                    <div>
                        <ul class="nav navbar-nav navbar-right">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Profile" asp-action="ViewProfile">View Profile</a>
                            </li>
                            <li>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Login" asp-action="Logout">Logout</a>
                            </li>
                        </ul>
                    </div>
                }

            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - PainAssessment - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/select2.full.min.js"></script>


    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
