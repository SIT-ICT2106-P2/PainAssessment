@model PainAssessment.Areas.ModuleTwo.Models.Checklist

@{ ViewData["Title"] = "CreateTemplateChecklist"; }


<div class="row">
    <div class="col lg-10">
        <h2 class="font-weight-bold fs-4 text">Create</h2>
    </div>
    <div class="col sm-1"></div>
</div>

<hr />
<div class="row">
    <div class="col-md-12 border border-dark rounded-lg">
        <form id="ChecklistForm" asp-action="CreateTemplateChecklist">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mt-2">
                <label asp-for="ChecklistName" class="control-label">Checklist Name</label>
                <input asp-for="ChecklistName" name="ChecklistName" class="form-control" />
                <span asp-validation-for="ChecklistName" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="PractitionerId" class="control-label">Created By</label>
                <input asp-for="PractitionerId" class="form-control" />
                <span asp-validation-for="PractitionerId" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="SessionId" class="control-label">Session</label>
                <input asp-for="SessionId" name="SessionId" class="form-control" />
                <span asp-validation-for="SessionId" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="ChecklistDescription" class="control-label">Checklist Description</label>
                <input asp-for="ChecklistDescription" name="ChecklistDescription" class="form-control" />
                <span asp-validation-for="ChecklistDescription" class="text-danger"></span>

            </div>
            <div class="form-group mt-2">
                <div class="form-check">

                    <input asp-for="Active" class="form-check-input" type="checkbox">
                    <label asp-for="Active" class="form-check-label">Active</label>
                </div>
            </div>

            @for (int i = 0; i < Model.Central.Count; i++)
            {
                <input type="hidden" asp-for="@Model.Central[i].IsCentralDeleted" />
            }
            @for (int i = 0; i < Model.Regional.Count; i++)
            {
                <input type="hidden" asp-for="@Model.Regional[i].IsRegionalDeleted" />
            }
            @for (int i = 0; i < Model.Local.Count; i++)
            {
                <input type="hidden" asp-for="@Model.Local[i].IsLocalDeleted" />
            }

                <input type="hidden" id="hiddenCentralLast" value="0" />

                <input type="hidden" id="hiddenRegionalLast" value="0" />

                <input type="hidden" id="hiddenLocaLast" value="0" />

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
    </div>
    <br />
    <div class="col sm-1 mb-3">
        <a class="btn btn-light border border-dark" style="float:left;" asp-action="ViewTemplateChecklist">Back</a>
    </div>
</div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    }

