@model PainAssessment.ViewModels.LoginModel

@{
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <h4>Login Page</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Index">
                @if (ViewData["Message"] != null)
                {
                    <div class="form-group">
                       
                            <div class="alert alert-@ViewData["MsgType"]">
                                <text>@ViewData["Message"]</text>
                            </div>
                        </div>
                   
                }
                <div class="form-group">
                    <label asp-for="Username" class="control-label"></label>
                    <input asp-for="Username" class="form-control" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="checkbox-incline" asp-for="RememberMe">
                        <input asp-for="RememberMe" />Remember Me
                    </label>
                    <label>
                        <a asp-controller="Account" asp-action="ChangePassword">Forget Password</a>
                    </label>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Submit" class="btn btn-primary" />
                    </div>
                </div>
            </form>
        </div>
    </div>

</body>
</html>