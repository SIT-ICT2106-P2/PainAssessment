@model IEnumerable<PainAssessment.Areas.Admin.Models.Practitioner>

@{
    ViewData["Title"] = "Index";
    var painDict = (Dictionary<Guid, List<string>>)ViewData["PractitionerPain"];
}


<div style="margin-top: 20px">
    <div class="row justify-content-between">
        <div class="col-sm-6">
            <h1>Manage Practitioners</h1>
            <p class="text-muted">
                Admin can manage practitioners. This include creating, updating, deleting, reading all, reset password.
            </p>
        </div>

        <div class="col-sm-2 align-self-center">
            <a asp-action="Create"
               type="button"
               class="btn btn-primary btn-block">
                Create
            </a>
        </div>
    </div>

    <div class="d-flex-col mt-2">

        <form class="d-flex justify-content-end" method="get" asp-action="Index">
            <input class="form-control me-2"
                   type="search"
                   name="name"
                   placeholder="Search with Name"
                   aria-label="Search"
                   value="@ViewData["name"]" />
            <button type="submit" class="btn btn-outline-success">
                Search
            </button>
        </form>


        <p class="d-flex justify-content-end text-muted">Displaying @((((int)ViewData["current_page"]-1)*8)+1) to @((((int)ViewData["current_page"]-1)*8)+Model.Count())  out of @ViewData["total_count"] records</p>

        <table class="table" id="pracTable">
            <thead>
                <tr>

                    <th scope="col">
                        @Html.DisplayNameFor(model => model.Name)
                    </th>

                    <th scope="col">
                        @Html.DisplayNameFor(model => model.Experience)
                    </th>
                    <th scope="col">
                        Clinical Area
                    </th>
                    <th scope="col">
                        Practice Type
                    </th>
                    <th scope="col">
                        Prior Pain Education
                    </th>
                    <th scope="col">
                        Actions
                    </th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    <tr id="row_@item.Id">

                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Experience)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.ClinicalArea.Name) @*ClinicalArea*@
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PracticeType.Name) @*PracticeType*@
                        </td>
                        <td>
                            <table>
                                @foreach (var pain in @painDict[item.Id])
                                {
                                    <tr>

                                        <td>
                                            @pain

                                        </td>
                                    </tr>

                                }
                            </table>
                        </td>

                        <td>
                            <a asp-action="Delete" asp-route-id="@item.Id"
                               type="button"
                               class="btn btn-primary btn-sm">
                                View all Consultations
                            </a>
                            <a asp-action="Edit" asp-route-id="@item.Id"
                               type="button"
                               class="btn btn-secondary btn-sm">
                                Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id"
                               type="button"
                               class="btn btn-danger btn-sm">
                                Reset Password
                            </a>
                            <button onclick="ConfirmDelete('@item.Id', '@item.Name')"
                                    type="button"
                                    class="btn btn-danger btn-sm">
                                Delete
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="d-flex justify-content-center">
            <div>
                <nav>
                    <ul class="pagination">
                        @if ((int)ViewData["current_page"] > 1)
                        {
                            <li class="page-item">
                                <a class="page-link"
                                   aria-label="Previous" asp-action="Index" asp-route-page=@((int) ViewData["current_page"]-1) asp-route-name=@ViewData["name"]>
                                    <span aria-hidden="true">&laquo;</span>
                                </a>
                            </li>
                        }


                        @for (int i = 1; i < (int)ViewData["max_page"] + 1; i++)
                        {

                            if (i == (int)ViewData["current_page"])
                            {
                                <li class="page-item active">
                                    <a class="page-link">@i</a>
                                </li>
                            }
                            else
                            {

                                <li class="page-item">
                                    <a class="page-link" asp-action="Index" asp-route-page=@i asp-route-name=@ViewData["name"]>@i</a>
                                </li>
                            }
                        }

                        @if ((int)ViewData["current_page"] < (int)ViewData["max_page"])
                        {
                            <li class="page-item">
                                <a class="page-link"
                                   aria-label="Next" asp-action="Index" asp-route-page=@((int)ViewData["current_page"] + 1) asp-route-name=@ViewData["name"]>
                                    <span aria-hidden="true">&raquo;</span>
                                </a>
                            </li>
                        }
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="deleteModal" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Delete Practitioner</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete <span id="modalPractitionerName"></span> practitioner?</p>
            </div>
            <div class="modal-footer">
                <button type="button" data-dismiss="modal" class="btn btn-secondary">Cancel</button>
                <button type="button" onclick="DeletePractitioner()" class="btn btn-danger">Delete</button>

            </div>
        </div>
    </div>
</div>

<input type="hidden" id="hiddenId" />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>

        var ConfirmDelete = function (Id, PractitionerName) {

            console.log(PractitionerName);
            $("#hiddenId").val(Id);
            $("#modalPractitionerName").text(PractitionerName);
            $("#deleteModal").modal('show');
        }

        var DeletePractitioner = function () {
            var Id = $("#hiddenId").val();
            $.ajax({
                type: "POST",
                url: "Practitioners/DeletePractitioner",
                data: { Id: Id },
                success: function (result) {

                    $("#deleteModal").modal("hide");
                    $("#row_" + Id).remove();
                }
            })

        }</script>
}
