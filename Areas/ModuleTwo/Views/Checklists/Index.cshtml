@using PainAssessment.Areas.ModuleTwo.Services
@using System.Collections.ObjectModel
@model IEnumerable<PainAssessment.Areas.ModuleTwo.Models.Checklist>


@{
    ViewData["Title"] = "Index";
}

<div class="row justify-content-between">
    <div class="col-sm-6">
        <h1>Checklist</h1>
        <p class="text-muted">Practitioners can manage their own checklists. This includes creating, reading, updating and deleting checklist information.</p>
    </div>
    <div class="col-sm-2 align-self-center">
        <a asp-action="Create" type="button" class="btn btn-primary btn-block">Create New</a>
    </div>
</div>
