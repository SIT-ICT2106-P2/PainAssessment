@using PainAssessment.Areas.ModuleTwo.Services
@using System.Collections.ObjectModel
@model IEnumerable<PainAssessment.Areas.ModuleTwo.Models.Checklist>

@{
    ViewData["Title"] = "Index";
    PainAssessment.Areas.ModuleTwo.Services.ICalculateWeightageService calculateWeightageService = new CalculateWeightageService();
    ReadOnlyDictionary<string, double> weightageDict = calculateWeightageService.calcWeightageFromThreeInputs(12.2, 22.2, 33.3);
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.checklistID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.checklistName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.checklistDescription)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.checklistID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.checklistName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.checklistDescription)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<!-- Testing CalculateWeightageService Service -->
<h1>Test CalcualateWeightageServices</h1>
<p>
    <p>@weightageDict["local"]</p>
    <p>@weightageDict["central"]</p>
    <p>@weightageDict["regional"]</p>
</p>
