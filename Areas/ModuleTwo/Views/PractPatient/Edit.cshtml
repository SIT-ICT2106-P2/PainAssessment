@*@model PainAssessment.Areas.ModuleTwo.Models.Patient*@
@model PainAssessment.Areas.Admin.Models.Patient

@{
    ViewData["Title"] = "Edit";
}

<div class="row">
    <div class="mb-3 col-12">
        <a asp-action="Index" class="btn btn-primary ">Back to patient list</a>
    </div>
    <h1 class="m-sm-2">Edit Patient</h1>

    <hr />
    <div class="card pt-3 px-5 rounded col-md-12 ">
        <form asp-action="Edit">
            <fieldset>
                <div class="row">
                    <div class="form-group col-md-6 " id="patientName">
                        <div class="form-group lead my-3 font-weight-bold">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group col-md-2 ">
                        <div class="form-group lead my-3 font-weight-bold">
                            <label asp-for="Id" class="control-label"></label>
                            <input asp-for="Id" class="form-control" readonly="readonly"/>
                            <span asp-validation-for="Id" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group col-md-2">
                        <div class="form-group lead my-3 font-weight-bold">
                            <label asp-for="Age" class="control-label"></label>
                            <input asp-for="Age" class="form-control" />
                            <span asp-validation-for="Age" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group col-md-2">
                        <div class="form-group lead my-3 font-weight-bold">
                            <label asp-for="Gender" class="control-label"></label>
                            <input asp-for="Gender" class="form-control" />
                            <span asp-validation-for="Gender" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-6">
                        <div class="form-group lead my-3 font-weight-bold">
                            <label asp-for="Condition" class="control-label"></label>
                            <input asp-for="Condition" class="form-control" />
                            <span asp-validation-for="Condition" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-12">
                        <div class="form-group lead my-3 font-weight-bold">
                            <label asp-for="Notes" class="control-label"></label>
                            <textarea asp-for="Notes" class="form-control" rows="5"></textarea>
                            <span asp-validation-for="Notes" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </fieldset>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
